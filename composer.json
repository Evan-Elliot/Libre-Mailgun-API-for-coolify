{
    "name": "libremailapi/libre-mail-api",
    "description": "A free and open-source email API with SMTP support for sending real emails",
    "type": "project",
    "license": "AGPL-3.0-or-later",
    "require": {
        "php": ">=7.4",
        "guzzlehttp/guzzle": "^7.0",
        "monolog/monolog": "^2.0",
        "ramsey/uuid": "^4.0",
        "phpmailer/phpmailer": "6.8"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0"
    },
    "autoload": {
        "psr-4": {
            "LibreMailApi\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "LibreMailApi\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "start": "php -S localhost:8080 index.php",
        "test": "phpunit"
    }
}
